{
  "firestore": {
    "rules": "infrastructure/firebase/firestore.rules",
    "indexes": "infrastructure/firebase/firestore.indexes.json"
  },
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "yarn --cwd \"$RESOURCE_DIR\" lint",
      "yarn --cwd \"$RESOURCE_DIR\" build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "#storage": {
    "rules": "infrastructure/firebase/storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "#hosting": {
      "host": "0.0.0.0",
      "port": 5000
    },
    "#pubsub": {
      "host": "0.0.0.0",
      "port": 8085
    },
    "#storage": {
      "host": "0.0.0.0",
      "port": 9199
    },
    "#eventarc": {
      "host": "0.0.0.0",
      "port": 9299
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true
    }
  }
}
